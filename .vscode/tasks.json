{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build BookStoreApp.API",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/BookStoreApp/BookStoreApp.API/BookStoreApp.API.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish BookStoreApp.API",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/BookStoreApp/BookStoreApp.API/BookStoreApp.API.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch BookStoreApp.API",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/BookStoreApp/BookStoreApp.API/BookStoreApp.API.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build BookStoreApp.Blazor.Server.UI",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/BookStoreApp/BookStoreApp.Blazor.Server.UI/BookStoreApp.Blazor.Server.UI.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish BookStoreApp.Blazor.Server.UI",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/BookStoreApp/BookStoreApp.Blazor.Server.UI/BookStoreApp.Blazor.Server.UI.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch BookStoreApp.Blazor.Server.UI",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/BookStoreApp/BookStoreApp.Blazor.Server.UI/BookStoreApp.Blazor.Server.UI.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}